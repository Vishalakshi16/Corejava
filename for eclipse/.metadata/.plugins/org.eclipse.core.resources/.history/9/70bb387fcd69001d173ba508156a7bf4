package com.xworkz.examapp.exam;

public class Coffee {
	
	public String name;
	public String brandNames[];
	public boolean sugarStatus;
	
	public Coffee(String name, String brandNames[], boolean sugarStatus) {
		this.name = name;
		this.brandNames = brandNames;
		this.sugarStatus = sugarStatus;
		
	}
	
	public void information() {
		System.out.println("inside coffee information");
		System.out.println("Coffee name is " + this.name);
		System.out.println("Different brands of coffee are..");
		for(int i = 0; i < brandNames.length; i++) {
			System.out.println(brandNames[i]);
		}
		if(sugarStatus == true) {
		System.out.println("Sugar is present ");
		}
		else if(sugarStatus == false) {
			System.out.println("Sugar is not present");
		}
		
	}

}
